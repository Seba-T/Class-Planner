<!DOCTYPE html>
<html lang="en" style="font-family: sans-serif">
  <title>Calendar App</title>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-signin-scope" content="profile email" />
    <meta
      name="google-signin-client_id"
      content="<%- googleAppId%>"
    />
    <link rel="shortcut icon" href="../favicon.ico" type="image/x-icon" />
     <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <style>
    * {
      font-family: auto;
    }
    .top-bar {
      text-align: center;
      font-size: 40px;
      width: fit-content;
      padding: 0em 0.7em;
      margin: auto;
      font-family: sans-serif;
}
    .container {
      width: 300px;
      height: 300px;

      margin: auto;
      margin-top: 100px;
      border-radius: 31px;
      background: #ffffff;
      box-shadow: 50px 50px 100px #878787, -50px -50px 100px #ffffff;
    }
    .welcome {
      margin-bottom: 0px;
      padding: 10px 30px;
      font-family: system-ui;
      font-size: 18px;
      text-align: center;
    }
  </style>
  <body>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
   
    <div class="top-bar">5D Planner</div>
    <div style="width: 100%; height: min-content">
      <div class="container" style="display: flex; flex-direction: column; justify-content: space-evenly;">
        <p class="welcome">
          Benevenuto nel planner ufficiale della 5D, per favore autenticati con
          il tuo account istituzionale	
&#129402.
        </p>
        <div
        style="display: block; align-self: center;"
          id="signin"
          class="g-signin2"
          data-onsuccess="onSignIn"
        ></div>
        <button type="button" class="btn btn-outline-secondary" onclick="signOut()" style="width: 120px; align-self: center;">Sign Out</button>
      </div>
      <p
        style="
          position: absolute;
          bottom: 0px;
          left: 0;
          text-align: center;
          margin: 30px 0px;
          width: 100%;
        "
      >
        <i class="far fa-copyright"></i><i class="far fa-copyright"></i> 2021
        Sebastiano Tocci
      </p>
    </div>
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script
    src="https://apis.google.com/js/platform.js?onload=init"
    async
    defer
  ></script>
  <script
    src="https://kit.fontawesome.com/6dcebd7e16.js"
    crossorigin="anonymous"
  ></script>
  <script>
    const domainName = "<%- domainName %>";

    function init() {
      gapi.load("auth2", function () {
        gapi.auth2.init({
          client_id:
            "<%- googleAppId %>",
        });
      });
    }
    function onSignIn(googleUser) {
      const id_token = "idtoken=" + googleUser.getAuthResponse().id_token;

      fetch(`${domainName}/tokensignin`, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded",
        },
        body: id_token,
      }).then(async (response) => {
        if (response.status === 200) {
          const loggedUser = JSON.parse(await response.text());
          for(let key in loggedUser){
            localStorage.setItem(key, JSON.stringify(loggedUser[key]));
          }
          location.reload();
        } else {
          console.log(response.status);
          $('#exampleModalLabel').innerHTML = response.text();
          $('#exampleModal').modal({keyboard: false})
          
        }
      });
    }

    function signOut() {
    var auth2 = gapi.auth2.getAuthInstance();
    auth2.signOut().then(function () {
      console.log('User signed out.');
    });
  }
  </script>
</html>
